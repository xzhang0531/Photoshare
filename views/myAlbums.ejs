<% include partials/header%>

<div class="container">
	<nav aria-label="breadcrumb" class="mt-2">
		<ol class="breadcrumb">
			<li class="breadcrumb-item my-auto"><a href="/">Home</a></li>
			<li class="breadcrumb-item my-auto active" aria-current="page">My Albums</li>
			<div class="ml-auto">
				<a href="/<%= currentUser.username %>/albums/create" class="btn btn-secondary btn-sm"><i class="fas fa-plus-circle mr-1"></i>New Album</a>
				<a href="/photo/upload" class="btn btn-secondary btn-sm"><i class="fas fa-upload mr-1"></i>Upload</a>
			</div>
		</ol>
	</nav>
	<div class="row">
		<% if(Object.keys(albums).length === 0){ %>
			<div>
				<img class="rounded mx-auto d-block" style="width: 30%;" src="/assets/images/no-album.jpg">
				<h4 class="mt-3 text-center">You do not have any album.<a href="/<%= currentUser.username %>/albums/create">Click me</a> to create one.</h4>
				
			</div>
			
		<% }else{ albums.forEach(function(album){ %>
			<div class="col-md-3 mb-3">
				<a href="/<%= currentUser.username %>/albums/<%= album.id %>">
					<% if(album.images.length == 0){ %>
						<img class="img-thumbnail rounded mx-auto d-block samesize" src="/assets/images/empty-album.png">
					<% }else{ %>
						<img class="img-thumbnail rounded mx-auto d-block samesize" src="/photo/<%= album.images[0].imageid %>">
					<% } %>
				</a>
				<div class="caption row pl-4 pr-2 mt-2">
					<a href="/<%= currentUser.username %>/albums/<%= album.id %>" class="col-md-8" style="word-wrap:break-word;" ><%= album.albumname %></a>
					<div class="col-md-4" style="color: grey; display: block;"><%= album.albumtype %></div>
				</div>
			</div>
		<% }); } %>
	</div>

</div>





<% include partials/footer%>