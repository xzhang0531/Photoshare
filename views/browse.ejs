<% include partials/header%>
<div class="container">
	<div class="jumbotron mt-2">
		<h1 class="display-4 niconne">All the public albums</h1>
		<p>Currently this page will show all public albums. I'll add functions like ranking, searching, tagging, etc.</p>
	</div>

	<div class="row container">
		<div class="list-group col-md-2">
			<button type="button" class="list-group-item list-group-item-action active">All albums</button>
			<button type="button" class="list-group-item list-group-item-action">Comming Soon</button>
			<button type="button" class="list-group-item list-group-item-action">Comming Soon</button>
			<button type="button" class="list-group-item list-group-item-action">Comming Soon</button>
		</div>
		<div class="col-md-10">
			<% albums.forEach(function(album){ %>
				<% if(album.images.length != 0){ %>
					<div class="row">
						<a href="/<%= album.owner %>/albums/<%= album.id %>" class="font-weight-bold" style="word-wrap:break-word;" ><%= album.albumname %></a>
						<p>&nbsp;(Owner: <%= album.owner %> &nbsp;</p>
						<p>View Count: <%= album.viewcount.toString() %>)</p>
					</div>
					<div class="row">
						<% for(i = 0; i < album.images.length && i < 4; i++) { %>
							<div class="col-md-3 mb-3">
								<a href="/<%= album.owner %>/albums/<%= album.id %>">
									<img class="img-thumbnail rounded mx-auto d-block samesize" src="/photo/<%= album.images[i].imageid %>">
								</a>
							</div>
						<% } %>
					</div>

					<hr class="my-4">
				<% } %>
			<% }); %>
		</div>
	</div>
</div>


<% include partials/footer%>