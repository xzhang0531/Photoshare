<% include partials/header%>

<div class="container">
	<div class="row">
		<h1 style="text-align: center; width: 100%; margin-top: 40px">Sign Up</h1>

		<div style="width: 40%; margin: 25px auto;">
			<form action="/signup" method="post">
				<div class="form-group">
					<label for="username">Username:</label>
					<input class="form-control" type="text" name="username" placeholder="username" required="true">
				</div>
				<div class="form-group">
					<label for="password">Password:</label>
					<input class="form-control" type="password" name="password" placeholder="password" required="true">
				</div>
				
				<button style="width: 100%" class="btn btn-lg btn-secondary">Join Photoshare</button>
			</form>
		</div>
	</div>
	
</div>



<% include partials/footer%>